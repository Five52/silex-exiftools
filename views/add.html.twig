{% extends 'layout.html.twig' %}

{% block title %}
    Ajout - {{ parent() }}
{% endblock %}

{% block main %}
    <h2>Ajout d'une image</h2>

    {% form_theme form 'form_errors.html.twig' %}

    {{ form(form) }} 
{% endblock %}

{% block javascript %}
    <script>
        let fieldset = document.createElement('fieldset');
        let form = document.querySelector('form');
        let submit = document.querySelector('button[type="submit"]');
        let file = document.querySelector('input[type="file"]');
        fieldset.id = 'Upload';
        fieldset.innerHTML = '<legend>' + fieldset.id + '</legend>';
        fieldset.appendChild(file.parentNode);

        form.firstChild.insertBefore(fieldset, submit.parentNode);
    </script>
{% endblock %}
