<!DOCTYPE html>
<html lang="fr">
<head prefix="og: http://ogp.me/ns#">
    <meta charset="UTF-8">
    <title>
    {% block title %}
        Meta-Image
    {% endblock %}
    </title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    {% block meta %}
    {% endblock %}
    <link rel="stylesheet" href="{{ root }}css/style.css">
</head>
<body>
    {% include 'partials/header.html.twig' %}
    <main>
        <div id="haut"></div>
        {% block main %}
            {% for message in app.session.flashbag.get('message') %}
                <div id="flash-message">{{ message }}</div>
            {% endfor %}
        {% endblock %}
        <div id="scroll-ctrls">
            <a href="#haut" title="Haut de page" id="scroll-top">&#8593;</a>
            {% block metaPager %}
            {% endblock %}
            <a href="#bas" title="Bas de page" id="scroll-bottom">&#8595;</a>
        </div>
        <div id="bas"></div>
    </main>
    {% include 'partials/footer.html.twig' %}
    {% block javascript %}
        <script src="{{ root }}js/buttonScroller.js"></script>
    {% endblock %}
</body>
</html>

