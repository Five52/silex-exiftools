{% extends 'layout.html.twig' %}

{% block title %}
    Suppression d'une image - {{ parent() }}
{% endblock %}

{% block main %}
    <h2>Suppression d'une image</h2>
    <p>Etes-vous sûr de vouloir supprimer cette image ainsi que ses métadonnées ?</p>

    {% form_theme form 'form_errors.html.twig' %}

    <form action="{{ path('delete', {'id': image.id, 'extension': image.extension}) }}" method="post">
        <a href="{{ path('update', {'id': image.id, 'extension': image.extension}) }}">Retour à la page des détails</a>
        <button type="submit">Supprimer l'image</button>
        {{ form_rest(form) }}
    </form>
{% endblock %}
